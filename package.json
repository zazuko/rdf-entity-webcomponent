{
  "name": "rdf-entity-webcomponent",
  "version": "0.7.5",
  "description": "A Web component that displays a Graph Pointer (clownface)",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "prepare": "husky install",
    "release": "vite build && changeset publish",
    "updateManifest": "cem analyze --globs \"src/rdf-entity.js\"",
    "test": "c8 --reporter=lcov --reporter=text mocha --require ts-node/register --experimental-specifier-resolution=node 'src/**/*.ts' 'test/**/*.test.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zazuko/rdf-entity-webcomponent.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "standard --fix"
    }
  },
  "author": "Zazuko GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zazuko/rdf-entity-webcomponent/issues"
  },
  "homepage": "https://github.com/zazuko/rdf-entity-webcomponent#readme",
  "dependencies": {
    "@rdfjs/dataset": "^2.0.1",
    "@rdfjs/namespace": "^2.0.0",
    "@rdfjs/term-map": "^2.0.0",
    "@rdfjs/term-set": "^2.0.1",
    "@tpluscode/rdf-ns-builders": "^3.0.3",
    "clownface": "^1.5.1",
    "lit": "^2.7.2",
    "n3": "^1.16.4",
    "rdf-ext": "^2.2.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@custom-elements-manifest/analyzer": "^0.8.0",
    "@lit-labs/ssr": "^3.1.1",
    "@types/chai": "^4.3.4",
    "@types/chai-json-schema": "^1.4.6",
    "@types/clownface": "^1.0.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/rdf-dataset-ext": "^1.0.3",
    "@types/rdf-ext": "^2.0.2",
    "@types/rdfjs__dataset": "^2.0.2",
    "@types/rdfjs__formats-common": "^2.0.2",
    "@types/rdfjs__namespace": "^2.0.3",
    "@types/rdfjs__term-map": "^2.0.3",
    "@types/rdfjs__term-set": "^2.0.3",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "chai-json-schema": "^1.5.1",
    "expect": "^29.5.0",
    "expect-mocha-snapshot": "^2.1.5",
    "html": "^1.0.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1"
  }
}
